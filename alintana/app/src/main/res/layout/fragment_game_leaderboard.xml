<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginVertical="32dp"
    tools:context=".GameLeaderboardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Top 5 Matches for Games"
            android:fontFamily="sans-serif-black"
            android:textSize="24dp"/>

        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_leaderboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="50dp"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_leaderboard_user_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Yanfei"
                        android:layout_weight="2"/>
                    <TextView
                        android:id="@+id/tv_leaderboard_percent_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary"
                        android:textSize="20sp"
                        android:fontFamily="sans-serif-medium"
                        android:text="100%"
                        android:layout_weight="8"
                        android:textAlignment="textEnd"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_leaderboard_user_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Childe"
                        android:layout_weight="2"/>
                    <TextView
                        android:id="@+id/tv_leaderboard_percent_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary"
                        android:textSize="20sp"
                        android:fontFamily="sans-serif-medium"
                        android:text="100%"
                        android:layout_weight="8"
                        android:textAlignment="textEnd"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_leaderboard_user_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Hutao"
                        android:layout_weight="2"/>
                    <TextView
                        android:id="@+id/tv_leaderboard_percent_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary"
                        android:textSize="20sp"
                        android:fontFamily="sans-serif-medium"
                        android:text="80%"
                        android:layout_weight="8"
                        android:textAlignment="textEnd"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_leaderboard_user_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Noelle"
                        android:layout_weight="2"/>
                    <TextView
                        android:id="@+id/tv_leaderboard_percent_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary"
                        android:textSize="20sp"
                        android:fontFamily="sans-serif-medium"
                        android:text="60%"
                        android:layout_weight="8"
                        android:textAlignment="textEnd"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_leaderboard_user_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Chongyun"
                        android:layout_weight="2"/>
                    <TextView
                        android:id="@+id/tv_leaderboard_percent_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary"
                        android:textSize="20sp"
                        android:fontFamily="sans-serif-medium"
                        android:text="20%"
                        android:layout_weight="8"
                        android:textAlignment="textEnd"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="24sp"
            android:textStyle="italic"
            android:textColor="@color/secondary"
            android:drawableEnd="@drawable/ic_baseline_arrow_forward_24"
            android:drawableTint="@color/secondary"
            android:text="Continue"
            />
    </LinearLayout>

</FrameLayout>
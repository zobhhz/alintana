<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".GameMainFragment"
    android:layout_marginVertical="32dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Game Categories"
        android:textSize="24sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Let the matchmaking begin!"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_game_category1"
            app:cornerRadius="8dp"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginEnd="10dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            app:backgroundTint="@color/white"
            app:strokeColor="@color/primary"
            android:textColor="@color/primary"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:text="Food"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_game_category2"
            app:cornerRadius="8dp"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginEnd="10dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="1"
            app:backgroundTint="@color/white"
            app:strokeColor="@color/primary"
            android:textColor="@color/primary"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:text="Sports"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_game_category3"
            app:cornerRadius="8dp"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            app:backgroundTint="@color/white"
            app:strokeColor="@color/primary"
            android:textColor="@color/primary"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:text="Pop Culture"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_game_category4"
            app:cornerRadius="8dp"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            app:backgroundTint="@color/white"
            app:strokeColor="@color/primary"
            android:textColor="@color/primary"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:text="Games"
            />
    </GridLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="View Leaderboards"
        android:textSize="24sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="See who your best matches are!"/>

<!--    <androidx.recyclerview.widget.RecyclerView-->
<!--        android:id="@+id/rv_game_leaderboards"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginVertical="10dp"-->
<!--        />-->
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_leaderboard1"
            app:cornerRadius="8dp"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginEnd="10dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            app:backgroundTint="@color/white"
            app:strokeColor="@color/primary"
            android:textColor="@color/primary"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:text="Food"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_leaderboard2"
            app:cornerRadius="8dp"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginEnd="10dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="1"
            app:backgroundTint="@color/white"
            app:strokeColor="@color/primary"
            android:textColor="@color/primary"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:text="Sports"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_leaderboard3"
            app:cornerRadius="8dp"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            app:backgroundTint="@color/white"
            app:strokeColor="@color/primary"
            android:textColor="@color/primary"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:text="Pop Culture"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_leaderboard4"
            app:cornerRadius="8dp"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            app:backgroundTint="@color/white"
            app:strokeColor="@color/primary"
            android:textColor="@color/primary"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:text="Games"
            />
    </GridLayout>
</LinearLayout>
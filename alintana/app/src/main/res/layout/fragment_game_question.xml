<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginVertical="32dp"
    tools:context=".GameQuestionFragment">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        >

        <!-- question indicator -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/start_nav"
            android:orientation="horizontal"
            android:weightSum="20"
            >

            <ImageView
                android:id="@+id/indicator1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_marginEnd="10dp"
                android:src="@drawable/rounded_rectangle"
                />

            <ImageView
                android:id="@+id/indicator2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_marginEnd="10dp"
                android:src="@drawable/rounded_rectangle"
                />

            <ImageView
                android:id="@+id/indicator3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_marginEnd="10dp"
                android:src="@drawable/rounded_rectangle"
                />

            <ImageView
                android:id="@+id/indicator4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_marginEnd="10dp"
                android:src="@drawable/rounded_rectangle"
                />

            <ImageView
                android:id="@+id/indicator5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:src="@drawable/rounded_rectangle"
                />
        </LinearLayout>

        <!-- question -->
        <TextView
            android:id="@+id/tv_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="50dp"
            android:fontFamily="sans-serif-black"
            android:text="What is your favorite First Person Shooter (FPS) game?"
            android:textSize="34sp" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_game_answer_1"
                app:cornerRadius="8dp"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="1dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="0"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:strokeWidth="1dp"
                app:backgroundTint="@color/white"
                app:strokeColor="@color/primary"
                android:textColor="@color/primary"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:text="Valorant"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_game_answer_2"
                app:cornerRadius="8dp"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="1"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:strokeWidth="1dp"
                app:backgroundTint="@color/white"
                app:strokeColor="@color/primary"
                android:textColor="@color/primary"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:text="Rainbow Six Seige"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_game_answer_3"
                app:cornerRadius="8dp"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="0"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:strokeWidth="1dp"
                app:backgroundTint="@color/white"
                app:strokeColor="@color/primary"
                android:textColor="@color/primary"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:text="CS:GO"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_game_answer_4"
                app:cornerRadius="8dp"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="1"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:strokeWidth="1dp"
                app:backgroundTint="@color/white"
                app:strokeColor="@color/primary"
                android:textColor="@color/primary"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:text="Team Fortess 2"
                />
        </GridLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="24sp"
            android:textStyle="italic"
            android:textColor="@color/secondary"
            android:drawableEnd="@drawable/ic_baseline_arrow_forward_24"
            android:drawableTint="@color/secondary"
            android:text="Next"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>